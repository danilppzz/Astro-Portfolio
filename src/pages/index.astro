---
import Header from "../components/Header.astro";
import Section from "../components/Section.astro";
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";
import Layout from "../layouts/Layout.astro";
import Tip from "../components/Tip.astro";

const data = (await import(`./data/en.json`)).default

const listProjects = data.projects.list;
---

<Layout title="danilppzz" lang="en">
  <main class="h-auto">
    <Header title=`${data.title}` />
    <Section title=`${data.about.title}`>
      {data.about.description}
    </Section>
    <Section>
      <Button loc="https://github.com/danilppzz">
        Github
      </Button>
      <Button loc="/test">
        Test
      </Button>
      <!-- <Tip text={"600cv / 1.778kg / v6"} tip={"Stats"} posx="200" posy="1490" /> -->
    </Section>
    <Section title={`${data.projects.title}`}>
      {listProjects.map((project: any, index: any) => (
        <Card
          title={project.title}
          description={project.description}
          usage_langs={project.usage_langs}
          url={project.url}
        />
      ))}
    </Section>    
  </main>
</Layout>

