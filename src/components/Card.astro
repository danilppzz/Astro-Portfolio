---
const { title, description, usage_langs, image_url } = Astro.props;
---

<div class="card">
  <!-- <div class=" items-start">
    <img class=" w-[250px] h-auto" src=`${image_url}` alt=`${title}` />
  </div> -->
  <header class="flex justify-between">
    {title && <h2 class="">{title}</h2>}
    <ul class="flex space-x-2">
      {
        usage_langs.map((lang: any, index: any) => (
          <li class=" bg-[#363636] h-[26px] bg-opacity-80 m-200 px-2 rounded items-center">{lang}</li>
        ))
      }
    </ul>
  </header>
  <div>
    {description && <p>{description}</p>}
  </div>
</div>

<style>
  .card {
    padding: 1rem;
    border: 0.1px solid white;
    box-shadow: 0.6rem 0.6rem #393939;
    border-radius: 8px;
    color: azure;
    max-width: max-content;
    margin: 0 auto 38px;
  }

  h2 {
    color: white;
    margin-bottom: 8px;
    font-weight: 700;
    line-height: 1.5;
    font-size: 1.5rem;
  }

  @media (width <= 700px) {
    .card {
      margin-bottom: 38px;
      flex-direction: column;
      justify-content: center;
      align-items: center;
    }
  }
</style>
